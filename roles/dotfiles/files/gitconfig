[user]
	name = Clint Plummer
	email = clint@yuhonas.com
[alias]
	co = checkout
	tree = log --oneline --decorate --graph
	up = pull --rebase --autostash
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	quotepath = false
	editor = vim
	pager = less -F -X
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[push]
	default = current
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
